{
  "name": "modularis",
  "description": "Boilerplate project for modular web apps",
  "keywords": [
    "modularis",
    "css",
    "sass"
  ],
  "style": "scss/index.scss",
  "sass": "scss/index.scss",
  "version": "0.0.1",
  "author": "Markus Oberlehner",
  "homepage": "https://github.com/modularis/modularis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/modularis/modularis"
  },
  "bugs": {
    "url": "https://github.com/modularis/modularis/issues"
  },
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "backstopjs": "^1.3.5",
    "browser-sync": "^2.13.0",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "clean-css": "^3.4.18",
    "jshint": "^2.9.2",
    "mocha": "^2.5.3",
    "node-sass": "^3.8.0",
    "node-sass-magic-importer": "^0.1.4",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.2",
    "pre-commit": "^1.1.3",
    "rollup": "^0.33.0",
    "rollup-plugin-buble": "^0.12.1",
    "rollup-plugin-commonjs": "^3.1.0",
    "rollup-plugin-node-resolve": "^1.7.1",
    "stylelint": "^6.8.0",
    "stylelint-config-standard": "^10.0.0",
    "uglify-js": "^2.6.4"
  },
  "scripts": {
    "styles:sass": "node-sass --source-map-embed --source-map-root / --importer node_modules/node-sass-magic-importer --output app/css scss/index.scss",
    "styles:postcss": "postcss --use autoprefixer --replace app/css/*",
    "styles:minify": "cleancss --output app/css/index.min.css app/css/index.css",
    "styles": "npm run styles:sass && npm run styles:postcss && npm run styles:minify && npm run test:styles:lint-no-error",
    "scripts:bundle": "rollup --config --sourcemap inline --format iife --output app/js/index.js js/index.js",
    "scripts:minify": "uglifyjs --compress --output app/js/index.min.js app/js/index.js",
    "scripts": "npm run scripts:bundle && npm run scripts:minify && npm run test:scripts:lint-no-error",
    "serve": "browser-sync start --server app --files app",
    "watch:styles": "chokidar scss/**/*.scss -c 'npm run styles'",
    "watch:scripts": "chokidar js/**/*.js -c 'npm run scripts'",
    "watch": "parallelshell 'npm run serve' 'npm run watch:styles' 'npm run watch:scripts'",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "test:styles:lint": "stylelint scss/**/*.scss --syntax scss",
    "test:styles:lint-no-error": "stylelint scss/**/*.scss --syntax scss || exit 0",
    "test:styles:regression:reference": "cd node_modules/backstopjs && npm run reference",
    "test:styles:regression": "cd node_modules/backstopjs && npm run test",
    "test:styles": "npm run test:styles:lint && npm run test:styles:regression",
    "test:scripts:lint": "jshint js/index.js",
    "test:scripts:lint-no-error": "jshint js/index.js || exit 0",
    "test:scripts:mocha": "mocha",
    "test:scripts": "npm run test:scripts:lint && npm run test:scripts:mocha",
    "test": "npm run test:styles && npm run test:scripts"
  },
  "pre-commit": [
    "precommit-msg",
    "test"
  ]
}
