{
  "name": "modularis",
  "description": "",
  "keywords": [
    "modularis",
    "css",
    "sass"
  ],
  "sass": "scss/index.scss",
  "version": "0.0.1",
  "author": "Markus Oberlehner",
  "homepage": "https://github.com/modularis/modularis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/modularis/modularis"
  },
  "bugs": {
    "url": "https://github.com/modularis/modularis/issues"
  },
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "backstopjs": "^1.2.1",
    "browser-sync": "^2.12.8",
    "clean-css": "^3.4.17",
    "jshint": "^2.9.2",
    "node-sass": "^3.7.0",
    "node-sass-magic-importer": "^0.0.3",
    "onchange": "^2.4.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.2",
    "pre-commit": "^1.1.3",
    "rollup": "^0.28.0",
    "rollup-plugin-buble": "^0.10.0",
    "rollup-plugin-commonjs": "^3.0.0",
    "rollup-plugin-node-resolve": "^1.7.0",
    "stylelint": "^6.5.1",
    "stylelint-config-standard": "^8.0.0",
    "uglify-js": "^2.6.2"
  },
  "scripts": {
    "styles:sass": "node-sass --source-map-embed --source-map-root / --importer node_modules/node-sass-magic-importer --output app/css scss/index.scss",
    "styles:postcss": "postcss --use autoprefixer --replace app/css/*",
    "styles:minify": "cleancss --output app/css/index.min.css app/css/index.css",
    "styles:lint": "stylelint scss/**/*.scss --syntax scss",
    "styles:lint-no-error": "stylelint scss/**/*.scss --syntax scss || exit 0",
    "styles": "npm run styles:sass && npm run styles:postcss && npm run styles:minify && npm run styles:lint-no-error",
    "scripts:bundle": "rollup --config --sourcemap inline --format iife --output app/js/index.js js/index.js",
    "scripts:minify": "uglifyjs --compress --output app/js/index.min.js app/js/index.js",
    "scripts:lint": "jshint js/index.js",
    "scripts:lint-no-error": "jshint js/index.js || exit 0",
    "scripts": "npm run scripts:bundle && npm run scripts:minify && npm run scripts:lint-no-error",
    "serve": "browser-sync start --server 'app' --files 'app'",
    "watch:styles": "onchange 'scss/**/*.scss' -- npm run styles",
    "watch:scripts": "onchange 'js/**/*.js' -- npm run scripts",
    "watch": "parallelshell 'npm run serve' 'npm run watch:styles' 'npm run watch:scripts'",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "test:reference": "cd node_modules/backstopjs && npm run reference",
    "test": "cd node_modules/backstopjs && npm run test"
  },
  "pre-commit": [
    "precommit-msg",
    "styles:lint",
    "scripts:lint"
  ]
}
